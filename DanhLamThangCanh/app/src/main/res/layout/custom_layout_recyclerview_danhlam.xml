<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/cardViewTrangChu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtTenDanhLamThangCanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh Lam"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txtDiaChiDanhLam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vị Trí Danh Lam"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgHinhAnhDanhLam"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/danhlam"
            android:scaleType="fitXY"/>

        <Button
            android:id="@+id/btnDatMonOdau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/datmon"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_local_shipping_white_24dp"
            android:visibility="gone"
            android:padding="5dp"/>

        <LinearLayout
            android:id="@+id/containerBinhLuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp">
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
